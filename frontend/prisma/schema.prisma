generator client {
  provider      = "prisma-client-js"
  output        = "../../node_modules/.prisma/client"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  registerNumber String  @id @unique
  name          String
  password      String
  teacher       Boolean
}

model Subject {
	classCode Int @id @unique
	subjectCode String
	name String
	class String
	section String
	batch Int
	evaluators String[]
	students String[]
	trimester Int
	teacher Int
}
